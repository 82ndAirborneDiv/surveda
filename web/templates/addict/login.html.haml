%h1{style: "text-align: center"} Login
.addict.container
  .addict.modal
    .addict.modal__form
      .addict.modal__fields
        .addict.field
          %input#txt-email.addict.input{required: "", type: "text"}
          %label.addict.label{for: "txt-email"} E-mail
        .addict.field
          %input#txt-password.addict.input{required: "", type: "password"}
          %label.addict.label{for: "txt-password"} Password
        .addict.errors
        .addict.modal__footer
          %button#btn-login.addict.btn Login
        %br
        %a.addict.link{href: "/register"} New user?
        &nbsp;
        %a.addict.link{href: "/recover_password"} Forgot your password?
