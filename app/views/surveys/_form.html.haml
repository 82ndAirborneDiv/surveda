= form_for @survey do |f|
  - if @survey.errors.any?
    #error_explanation
      %h2= "#{pluralize(@survey.errors.count, "error")} prohibited this survey from being saved:"
      %ul
        - @survey.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :quiz
    = f.select :quiz_id, @quizzes.map{|q| [q.name, q.id]}, { :prompt => "Please select"}
  .actions
    = f.submit 'Save'
