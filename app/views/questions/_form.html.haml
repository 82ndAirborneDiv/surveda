= form_for @question do |f|
  - if @question.errors.any?
    #error_explanation
      %h2= "#{pluralize(@question.errors.count, "error")} prohibited this question from being saved:"
      %ul
        - @question.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :kind
    = f.select :kind, Question.kinds.keys
  .field
    = f.label :text
    = f.text_area :text
  .field
    = f.label :quiz
    = f.select :quiz_id, @quizzes.map{|q| [q.name, q.id]}, { :prompt => "Please select"}
  .actions
    = f.submit 'Save'
