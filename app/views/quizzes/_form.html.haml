= form_for @quiz do |f|
  - if @quiz.errors.any?
    #error_explanation
      %h2= "#{pluralize(@quiz.errors.count, "error")} prohibited this quiz from being saved:"
      %ul
        - @quiz.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :description
    = f.text_area :description
  .field
    = f.label :channel
    = f.text_field :channel
  .field
    = f.label :survey
    = f.text_field :survey
  .field
    = f.label :question
    = f.text_field :question
  .actions
    = f.submit 'Save'
